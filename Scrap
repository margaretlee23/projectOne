SELECT * FROM users u 
JOIN user_addresses ua ON ua.user_id == u.id


CREATE TABLE users
(id integer primary key,
name text
);


CREATE TABLE user_addresses
(user_id integer primary key,
address text
);

CREATE TABLE user 
(
    id integer NOT NULL,
    name text,
    email text,
    password text
);

ALTER TABLE address DROP COLUMN id;


